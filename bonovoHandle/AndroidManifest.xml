<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bonovo.bonovohandle"
    android:versionCode="1"
    android:versionName="1.0"
    android:sharedUserId="android.uid.system"  >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />
    
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
	<uses-permission android:name="android.permission.WRITE_SETTINGS"/>
	<uses-permission android:name="android.permission.DEVICE_POWER"/>
	<uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
	
	<uses-permission android:name="android.permission.GET_TASKS"/>
	<uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>
	<uses-permission android:name="android.permission.RESTART_PACKAGES"/>
	<uses-permission android:name="android.permission.FORCE_STOP_PACKAGES"/>
	<uses-permission android:name="android.permission.SHUTDOWN"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:persistent="true"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Translucent" >
		<!--
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		-->
        <activity
            android:name=".SourceControl"
            android:icon="@drawable/ic_launcher_source"
            android:label="@string/title_activity_source"
            android:theme="@android:style/Theme.Holo.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PowerActivity"
            android:clearTaskOnLaunch="true"
            android:icon="@drawable/ic_launcher_power"
            android:label="@string/title_activity_power"
			android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
		</activity>
        <activity
            android:name=".AppListActivity"
            android:icon="@drawable/ic_launcher_source"
            android:label="@string/title_activity_applist"
            android:theme="@android:style/Theme.Holo.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VideoSwitcherActivity"
            android:clearTaskOnLaunch="true"
            android:noHistory="true"
            android:launchMode="singleTask" 
            android:label="@string/title_activity_videoswitcher" >
        </activity>
        <activity
            android:name=".AppSwitchActivity"
            android:theme="@android:style/Theme.Dialog"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:launchMode="singleTask"
            android:label="@string/title_activity_appswitcher" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver 
            android:name=".HandleReceiver"
            android:enabled="true"
            android:exported="false"
            android:label="HandleReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PRE_LAUNCHER"/>
            </intent-filter>
        </receiver>
        
        <service 
            android:name=".HandleService">
            <intent-filter >
                <action  android:name="com.bonovo.bonovohandle.HandleService"/>
            </intent-filter>
        </service>
		
        <receiver android:name=".HandleService$S8VolumeRecevier">
            <intent-filter>
                <action android:name="request_s8_info"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
